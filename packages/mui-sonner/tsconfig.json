{
    "extends": "@repo/typescript-config/react-library.json",
    "compilerOptions": {
        "module": "ESNext",
        "target": "esnext",
        "moduleResolution": "Bundler",
        "strict": true,
        "declaration": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "lib": ["dom", "esnext"],
        "noEmitOnError": true,
    },
    "include": ["src/**/*"],
    "exclude": ["**/dist", "**/node_modules"]
}
  